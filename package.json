{
  "repository": {
    "type": "git",
    "url": "git://github.com/qSharpy/azure-templates-vscode-extension.git"
  },
  "name": "azure-templates-navigator",
  "displayName": "Azure Templates Navigator",
  "publisher": "bogdanbujor",
  "description": "With this extension you can more easily navigate through your azure pipeline templates.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "languages": [{
      "id": "yaml",
      "aliases":[
        "YAML",
        "yaml"
      ],
      "extensions":[
        ".yaml",
        ".yml"
      ]
    }]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.77.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5",
    "@vscode/test-electron": "^2.3.0"
  }
}
