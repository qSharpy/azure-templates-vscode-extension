{
  "name": "azure-templates-navigator",
  "displayName": "Azure Templates Navigator",
  "description": "Hover over Azure Pipeline template references to instantly see their parameters. Click to open the template file.",
  "version": "1.1.0",
  "publisher": "bogdanbujor",
  "icon": "logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/qSharpy/azure-templates-vscode-extension.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Azure",
    "Other"
  ],
  "keywords": [
    "azure",
    "pipelines",
    "yaml",
    "templates",
    "devops"
  ],
  "activationEvents": [
    "onLanguage:yaml"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "title": "Azure Templates Navigator",
      "properties": {
        "azure-templates-navigator.requiredParameterColor": {
          "type": "string",
          "default": "#c92d35",
          "description": "Hex color used to highlight required parameters in the hover tooltip."
        }
      }
    },
    "commands": [
      {
        "command": "azure-templates-navigator.setRequiredParameterColor",
        "title": "Set Required Parameter Color",
        "category": "Azure Templates Navigator"
      },
      {
        "command": "azure-templates-navigator.openTemplate",
        "title": "Open Template File",
        "category": "Azure Templates Navigator",
        "icon": "$(go-to-file)"
      }
    ],
    "languages": [
      {
        "id": "yaml",
        "aliases": ["YAML", "yaml"],
        "extensions": [".yaml", ".yml"]
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "test": "node ./test/runTest.js",
    "test:unit": "mocha test/unit/**/*.test.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.85.0",
    "@vscode/test-electron": "^2.3.0",
    "@vscode/vsce": "^2.18.0",
    "eslint": "^8.36.0",
    "mocha": "^10.2.0"
  }
}
